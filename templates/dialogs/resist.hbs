<form>
	<div class="form-group roll-group">
        <div>
        {{localize 'EZD6.DiceToRoll'}}: &nbsp;
        <a class="item-control" onclick="handleResistDiceDecrement()">
            <i class="fas fa-minus"></i>
        </a>
        <input id="numdice" name="numdice" type="number" data-dtype="Number" value="{{dice}}">
        <a class="item-control" onclick="handleResistDiceIncrement()">
            <i class="fas fa-plus"></i>
        </a>
        </div>
    </div>
</form>

<script>
    bbField = document.getElementById("numdice");
    var count = bbField.value;

    function handleResistDiceIncrement() {
        count++;
        bbField.value = count;
    };

    function handleResistDiceDecrement() {
        count = (--count > 1) ? count : 1;
        bbField.value = count;
    };
</script>
